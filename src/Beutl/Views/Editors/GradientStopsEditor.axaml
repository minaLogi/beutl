<UserControl x:Class="Beutl.Views.Editors.GradientStopsEditor"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:Beutl.Views.Editors"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:vm="using:Beutl.ViewModels.Editors"
             Padding="4,0"
             d:DesignWidth="300"
             x:CompileBindings="True"
             x:DataType="vm:GradientStopsEditorViewModel"
             mc:Ignorable="d">
    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
        <TextBlock Margin="4,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Text="{Binding Header}" />

        <Border x:Name="border"
                Grid.Row="1"
                Height="20"
                Margin="4,0"
                CornerRadius="10">
            <Border.Background>
                <LinearGradientBrush GradientStops="{Binding Stops}" StartPoint="0%,50%" EndPoint="100%,50%" />
            </Border.Background>
        </Border>
        <ItemsControl x:Name="items"
                      Grid.Row="1"
                      Height="20"
                      Margin="4,0"
                      ClipToBounds="False"
                      IsEnabled="{Binding CanEdit.Value}"
                      ItemsSource="{Binding Stops}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Panel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>

                    <Border HorizontalAlignment="Left"
                            Background="{Binding Color, Converter={StaticResource ColorToBrush}}"
                            BorderBrush="{Binding Color, Converter={StaticResource ColorToBorderBrush}}"
                            BorderThickness="3"
                            PointerExited="Item_PointerExited"
                            PointerMoved="Item_PointerMoved"
                            PointerPressed="Item_PointerPressed"
                            PointerReleased="Item_PointerReleased">
                        <Border.RenderTransform>
                            <MultiBinding Converter="{StaticResource GradientStopToTransform}">
                                <Binding Path="Offset" />
                                <Binding ElementName="items" Path="Bounds.Width" />
                            </MultiBinding>
                        </Border.RenderTransform>
                        <Border.Styles>
                            <Style Selector="Border">
                                <Setter Property="Width" Value="20" />
                                <Setter Property="Height" Value="20" />
                                <Setter Property="CornerRadius" Value="10" />
                                <Setter Property="Margin" Value="-10,0,0,0" />
                            </Style>
                        </Border.Styles>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <local:PropertyEditorMenu Grid.Row="1" Grid.Column="1" />

        <StackPanel Grid.Row="2"
                    Margin="8,8,4,0"
                    HorizontalAlignment="Right"
                    IsEnabled="{Binding SelectedItem.Value, Converter={x:Static ObjectConverters.IsNotNull}}"
                    Orientation="Horizontal"
                    Spacing="4">
            <Button Width="37"
                    Height="37"
                    Click="Delete_Click">
                <ui:SymbolIcon FontSize="16" Symbol="Delete" />
            </Button>

            <ui:ColorPickerButton x:Name="colorPicker"
                                  CustomPaletteColors="{StaticResource PaletteColors}"
                                  UseColorPalette="True"
                                  Color="{Binding SelectedItem.Value.Color}" />
        </StackPanel>
    </Grid>
</UserControl>
